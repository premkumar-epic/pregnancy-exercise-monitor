# Free Environment Configuration
# All services are FREE and open-source

# Django Settings
SECRET_KEY=your-secret-key-here-generate-new-one
DEBUG=False
ALLOWED_HOSTS=yourapp.railway.app,yourapp.onrender.com

# Database - FREE options:
# Railway PostgreSQL (included free)
# Supabase (500 MB free)
# ElephantSQL (20 MB free)
# Neon.tech (3 GB free)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=railway  # or your database name
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_HOST=containers-us-west-xxx.railway.app
DB_PORT=5432

# Redis Cache - FREE options:
# Railway Redis (included free)
# Upstash (10,000 commands/day free)
# Redis Cloud (30 MB free)
CACHE_BACKEND=django_redis.cache.RedisCache
REDIS_URL=redis://default:password@redis.railway.internal:6379

# CORS - Your frontend domain
CORS_ALLOWED_ORIGINS=https://yourapp.vercel.app,https://yourapp.railway.app

# JWT Settings
JWT_ACCESS_LIFETIME=60
JWT_REFRESH_LIFETIME=1

# Rate Limiting
THROTTLE_ANON=100/hour
THROTTLE_USER=1000/hour

# Email - FREE options:
# Gmail SMTP (500 emails/day free)
# SendGrid (100 emails/day free)
# Brevo (300 emails/day free)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=AI Pregnancy Care <your-email@gmail.com>

# Monitoring - FREE options:
# Sentry (5,000 errors/month free)
# GlitchTip (self-hosted, completely free)
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Logging
LOG_LEVEL=INFO

# Optional: Analytics - FREE options:
# Umami (self-hosted)
# Plausible (self-hosted)
# ANALYTICS_ID=

# Optional: CDN - FREE:
# Cloudflare (unlimited free)
# CLOUDFLARE_ZONE_ID=
# CLOUDFLARE_API_TOKEN=
