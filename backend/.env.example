# Alternative: Resend
# RESEND_API_KEY=your-resend-api-key

# Django Secret Key (generate a new one for production)
# SECRET_KEY=your-secret-key-here

# Database (for production)
# DATABASE_URL=postgresql://user:password@localhost/dbname
