# Environment Configuration for Pregnancy Exercise Monitor

# SECURITY WARNING: Generate a new secret key for production!
# You can generate one with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-this-in-production

# Debug mode (NEVER set to True in production)
DEBUG=True

# Allowed hosts (comma-separated, no spaces)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For development (SQLite)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# For production (PostgreSQL) - uncomment and configure
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=pregnancy_db
# DB_USER=postgres_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# JWT Configuration (in minutes for access, days for refresh)
JWT_ACCESS_LIFETIME=60
JWT_REFRESH_LIFETIME=1

# Rate Limiting
THROTTLE_ANON=100/hour
THROTTLE_USER=1000/hour

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=AI Pregnancy Care <your-email@gmail.com>

# Logging
LOG_LEVEL=INFO
