# Production Environment Configuration Template
# Copy this file to .env.production and fill in your production values

# CRITICAL: Generate a new secret key for production!
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-KEY

# NEVER set DEBUG=True in production
DEBUG=False

# Your production domain(s) - comma-separated, no spaces
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# PostgreSQL Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=pregnancy_db
DB_USER=postgres_user
DB_PASSWORD=CHANGE-THIS-TO-SECURE-PASSWORD
DB_HOST=db
DB_PORT=5432

# CORS Configuration - Your frontend domain
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# JWT Configuration (in minutes for access, days for refresh)
JWT_ACCESS_LIFETIME=15
JWT_REFRESH_LIFETIME=7

# Rate Limiting (stricter in production)
THROTTLE_ANON=50/hour
THROTTLE_USER=500/hour

# Email Configuration (Production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-production-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=AI Pregnancy Care <your-production-email@gmail.com>

# Logging
LOG_LEVEL=WARNING

# Sentry (Error Tracking) - Optional but recommended
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Redis Cache
# REDIS_URL=redis://redis:6379/0
